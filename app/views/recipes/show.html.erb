<header>
  <h1><%= @recipe.name %></h1>
  <%= image(@recipe) %>
</header>

<div>
  <%= @recipe.kind %>
  <%= @recipe.duration.to_formatted_s(:time) %> min
  <%= pluralize(@recipe.portion, 'portion', 'portions') %>
</div>

<h2>Ingridients</h2>
<p>
  <%= @recipe.stuff %>
</p>

<h2>Calories</h2>
<p> <%= @recipe.calories %></p>

<h2>Prepare Mode</h2>
<p>
  <%= @recipe.prepare_mode %>
</p>

<h3>Cost</h3>
<p><%= @recipe.cost %></p>

<%= link_to "Back to Recipes", recipes_path %>
<%= link_to "Edit Recipe", edit_recipe_path(@recipe) %>
<%= link_to "Delete Recipe", recipe_path(@recipe), method: :delete, data:{confirm: "Are you sure?"} %>