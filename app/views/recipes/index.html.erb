<h1>I Saw on The Internet</h1>

<% @recipes.each do |recipe| %>
   <article>
      <header>
        <h2><%= recipe.name %></h2>
        <p>
          <% if recipe.calories < 100 %>
            Light (<%= recipe.calories %> Calories)
          <% else %>
            <%= recipe.calories %> Calories
          <% end %>
        </p>
        <span>Cost: <%= number_to_currency(recipe.cost)%></span>

      </header>
      <h3>Ingridients</h3>
      <p><%= truncate(recipe.stuff, length: 140) %></p>
      
      <h3>Prepare Mode</h3>
      <p><%= recipe.prepare_mode %></p>
      
   </article>
<% end %>

